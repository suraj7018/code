#include <bits/stdc++.h> 

void topsort(int node, vector<bool> &visited, stack<int> &s, unordered_map<int, vector<int>> &adj) {
    visited[node] = true;

    for (auto neighbour : adj[node]) {
        if (!visited[neighbour]) {
            topsort(neighbour, visited, s, adj);
        }
    }
    s.push(node);
}

vector<int> topologicalSort(vector<vector<int>> &edges, int v, int e) {
    // Create adjacency list
    unordered_map<int, vector<int>> adj;
    for (int i = 0; i < e; i++) {
        int u = edges[i][0];
        int v = edges[i][1];

        adj[u].push_back(v);
    }

    // Call DFS for all components
    vector<bool> visited(v, false);
    stack<int> s;
    for (int i = 0; i < v; i++) {
        if (!visited[i]) {
            topsort(i, visited, s, adj);
        }
    }

    vector<int> ans;
    while (!s.empty()) {
        ans.push_back(s.top());
        s.pop();
    }
    return ans;
}
